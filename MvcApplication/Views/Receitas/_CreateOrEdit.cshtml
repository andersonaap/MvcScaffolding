@model MvcApplication.Models.Receita

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Nome)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Nome)
    @Html.ValidationMessageFor(model => model.Nome)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.TempoPreparo)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.TempoPreparo)
    @Html.ValidationMessageFor(model => model.TempoPreparo)
</div>

<div class="editor-label">
    Categoria
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.CategoriaId, ((IEnumerable<MvcApplication.Models.Categoria>)ViewBag.PossibleCategorias).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.CategoriaId.ToString(),
        Selected = (Model != null) && (option.CategoriaId == Model.CategoriaId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.CategoriaId)
</div>
